<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.biz.bbs.mapper.BBsDao">

	<!--
		tbl_bbs 테이블 1개를 self join 해서 
		게시판 원글과 원글에 딸린 답글을 동시에 select하여 수행하는 방식
		
		원글 select를 수행하고
		원글의 bbs_id값을 selectSub에 전송하여 bbs_id와 bbs_p_id가 같은 
		또 다른 리스트를 select 수행하고,
		
		그 결과를 BBsVO의 List<BBsVO> bbs_reply 변수에 담아서
		한번에 view로 전송하는 방식
		
		fetchType=lazy
		subquery나 join을 수행했을 때
		실제저긍로 view에서 해당 쿼리 결과를 참조하지 않으면
		sql실행을 보류하라 하는 의미
		실제 view에서 사용하지 않는 불필요한 query를 실행하여 성능을 낮추는 결과를 줄일 수 있다.
		
		Collection의 fetchType="lazy" 속성 
		mybatis가 query를 실행하고 나서 lazy가 설정된 query에는 '보류하겠다' 라는 표식을 남겨두고
		어디선가 해당 결과를 view에 표시하는 부분이 발생을 하면
		그때 해당 쿼리를 실행한다.
	-->
	<select id="selectMain" resultMap="bbsReply">
		SELECT * FROM tbl_bbs WHERE bbs_p_id IS NULL OR bbs_p_id = 0
	</select>
	
	<resultMap type="bbsVO" id="bbsReply">
		<id column="bbs_id" property="bbs_id" />
		<result column="bbs_id" property="bbs_id"/>
		<collection property="bbs_reply" column="bbs_id" ofType="bbsVO"  select="selectSub"/>
	</resultMap>
	
	<select id="selectSub" resultType="bbsVO">
		SELECT * FROM tbl_bbs WHERE bbs_p_id = #{bbs_id}
	</select>

	<insert id="insert" >
		INSERT INTO `tbl_bbs`(
			`BBS_ID`,
			`BBS_P_ID`,
			`BBS_WRITER`,
			`BBS_DATE`,
			`BBS_TIME`,
			`BBS_SUBJECT`,
			`BBS_CONTENT`,
			`BBS_COUNT`
		)VALUES(
			#{bbs_id},
			#{bbs_p_id},
			#{bbs_writer},
			#{bbs_date},
			#{bbs_time},
			#{bbs_subject},
			#{bbs_content},
			#{bbs_count}
		);
	
	</insert>
	
	<update id="update">
		UPDATE `tbl_bbs` SET
			`BBS_P_ID` = #{bbs_p_id},
			`BBS_WRITER` = #{bbs_writer},
			`BBS_DATE` = #{bbs_date},
			`BBS_TIME` = #{bbs_time},
			`BBS_SUBJECT` = #{bbs_subject},
			`BBS_CONTENT` = #{bbs_content},
			`BBS_COUNT` = #{bbs_count}
		WHERE `BBS_ID` = #{bbs_id}
	</update>

</mapper> 